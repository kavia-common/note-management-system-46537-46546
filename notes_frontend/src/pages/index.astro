---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <main class="app">
    <aside class="sidebar" aria-label="Notes sidebar">
      <header class="sidebar-header">
        <h1 class="app-title">Notes</h1>
        <button id="new-note-btn" class="btn primary" aria-label="Create new note" title="New note (Ctrl/Cmd+N)">
          ï¼‹ New
        </button>
      </header>

      <div class="search-row">
        <label for="search" class="sr-only">Search notes</label>
        <input id="search" type="search" placeholder="Search notes..." aria-label="Search notes" />
      </div>

      <div id="note-list" class="note-list" role="list" aria-label="Note list">
        <!-- NoteList items will be injected by client script -->
      </div>
    </aside>

    <section class="content" aria-live="polite">
      <div id="empty-state" class="empty-state" role="document">
        <h2>Welcome</h2>
        <p>Select a note from the left or create a new note to get started.</p>
      </div>

      <div id="editor" class="editor" hidden>
        <div class="editor-header">
          <input id="title-input" class="title-input" placeholder="Note title" aria-label="Note title" />
          <div class="editor-actions">
            <button id="save-btn" class="btn primary" aria-label="Save note" title="Save (Ctrl/Cmd+S)">
              Save
            </button>
            <button id="delete-btn" class="btn danger" aria-label="Delete note">
              Delete
            </button>
          </div>
        </div>
        <div class="editor-body">
          <textarea id="content-input" class="content-input" placeholder="Write in Markdown..." aria-label="Note content"></textarea>
          <div class="preview">
            <h3 class="preview-title">Preview</h3>
            <div id="preview-pane" class="preview-pane" aria-live="polite"></div>
          </div>
        </div>
      </div>
    </section>

    <div id="toast" class="toast" role="status" aria-live="polite" aria-atomic="true"></div>
  </main>

  <script type="module" src="/scripts/store.js"></script>
  <script type="module" src="/scripts/components.js"></script>
  <script type="module">
    import { noteStore } from '/scripts/store.js';
    import { renderList, renderPreview, showToast, debounce } from '/scripts/components.js';

    // Elements
    const listEl = document.getElementById('note-list');
    const searchEl = document.getElementById('search');
    const newBtn = document.getElementById('new-note-btn');
    const editorEl = document.getElementById('editor');
    const emptyEl = document.getElementById('empty-state');
    const titleInput = document.getElementById('title-input');
    const contentInput = document.getElementById('content-input');
    const previewPane = document.getElementById('preview-pane');
    const saveBtn = document.getElementById('save-btn');
    const deleteBtn = document.getElementById('delete-btn');

    // Initial load + seed
    noteStore.init();

    function openEditor(noteId) {
      const note = noteStore.get(noteId);
      if (!note) return;
      emptyEl.hidden = true;
      editorEl.hidden = false;
      titleInput.value = note.title || '';
      contentInput.value = note.content || '';
      renderPreview(contentInput.value, previewPane);
      titleInput.focus();
    }

    function resetEditor() {
      titleInput.value = '';
      contentInput.value = '';
      renderPreview('', previewPane);
      editorEl.hidden = true;
      emptyEl.hidden = false;
    }

    // Render list
    function refreshList() {
      const q = (searchEl.value || '').trim();
      const { items, selectedId } = noteStore.list({ query: q });
      renderList(listEl, items, selectedId, (id) => {
        noteStore.select(id);
      });
    }

    // Store subscription
    noteStore.subscribe(() => {
      refreshList();
      const current = noteStore.current();
      if (current) {
        openEditor(current.id);
      } else {
        resetEditor();
      }
    });

    // Search
    searchEl.addEventListener('input', debounce(() => {
      refreshList();
    }, 150));

    // Create new note
    newBtn.addEventListener('click', () => {
      noteStore.create();
    });

    // Delete
    deleteBtn.addEventListener('click', () => {
      const current = noteStore.current();
      if (!current) return;
      const ok = confirm('Delete this note?');
      if (!ok) return;
      noteStore.remove(current.id);
      showToast('Note deleted');
    });

    // Save (explicit)
    saveBtn.addEventListener('click', () => {
      const current = noteStore.current();
      if (!current) return;
      noteStore.update(current.id, {
        title: titleInput.value.trim(),
        content: contentInput.value,
      });
      showToast('Saved');
    });

    // Autosave (debounced on input)
    const autosave = debounce(() => {
      const current = noteStore.current();
      if (!current) return;
      noteStore.update(current.id, {
        title: titleInput.value.trim(),
        content: contentInput.value,
      });
      showToast('Autosaved');
    }, 600);

    titleInput.addEventListener('input', () => {
      autosave();
    });
    contentInput.addEventListener('input', () => {
      renderPreview(contentInput.value, previewPane);
      autosave();
    });

    // Keyboard shortcuts
    document.addEventListener('keydown', (e) => {
      const isMac = navigator.platform.toUpperCase().includes('MAC');
      const mod = isMac ? e.metaKey : e.ctrlKey;
      if (mod && e.key.toLowerCase() === 's') {
        e.preventDefault();
        saveBtn.click();
      }
      if (mod && e.key.toLowerCase() === 'n') {
        e.preventDefault();
        newBtn.click();
      }
    });

    // Initial render
    refreshList();
    const cur = noteStore.current();
    if (cur) openEditor(cur.id);
  </script>

  <style>
    /* Ocean Professional Theme tokens */
    :root {
      --color-bg: #f9fafb;
      --color-surface: #ffffff;
      --color-text: #111827;
      --color-muted: #6b7280;

      --primary: #2563EB;
      --secondary: #F59E0B;
      --error: #EF4444;

      --ring: 0 0 0 3px rgb(37 99 235 / 0.35);

      --radius: 12px;
      --shadow: 0 8px 20px rgba(0,0,0,0.06);
      --shadow-soft: 0 2px 6px rgba(0,0,0,0.06);
      --border: 1px solid rgba(17,24,39,0.08);
      --gradient: linear-gradient(180deg, rgba(37, 99, 235, 0.08), rgba(249, 250, 251, 0.6));
    }

    main.app {
      display: grid;
      grid-template-columns: 320px 1fr;
      height: 100vh;
      background: var(--color-bg);
      color: var(--color-text);
    }

    .sidebar {
      display: flex;
      flex-direction: column;
      border-right: var(--border);
      background:
        radial-gradient(1200px 200px at -100px -100px, rgba(37,99,235,0.08), transparent 60%),
        var(--color-surface);
    }

    .sidebar-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      padding: 16px;
      position: sticky;
      top: 0;
      background: var(--color-surface);
      border-bottom: var(--border);
      z-index: 1;
    }

    .app-title {
      font-size: 1.1rem;
      margin: 0;
    }

    .search-row {
      padding: 12px 16px;
      border-bottom: var(--border);
    }

    .search-row input[type="search"] {
      width: 100%;
      padding: 10px 12px;
      border-radius: 10px;
      border: var(--border);
      background: #fff;
      box-shadow: var(--shadow-soft);
      outline: none;
      transition: box-shadow .2s, transform .05s;
    }
    .search-row input[type="search"]:focus {
      box-shadow: var(--shadow), var(--ring);
    }

    .note-list {
      overflow: auto;
      padding: 8px;
      display: grid;
      gap: 8px;
    }

    .note-item {
      background: var(--color-surface);
      border: var(--border);
      border-radius: 12px;
      padding: 12px;
      box-shadow: var(--shadow-soft);
      cursor: pointer;
      transition: transform .05s ease, box-shadow .2s ease, background .2s ease;
    }
    .note-item:hover {
      transform: translateY(-1px);
      box-shadow: var(--shadow);
    }
    .note-item[aria-selected="true"] {
      outline: none;
      box-shadow: var(--shadow), var(--ring);
      border-color: rgba(37,99,235,0.35);
    }
    .note-item-title {
      font-weight: 600;
      margin: 0 0 4px;
      font-size: 0.98rem;
    }
    .note-item-meta {
      color: var(--color-muted);
      font-size: 0.8rem;
    }

    .content {
      display: flex;
      flex-direction: column;
      background: var(--gradient);
    }

    .empty-state {
      margin: auto;
      text-align: center;
      max-width: 560px;
      background: var(--color-surface);
      padding: 32px;
      border-radius: var(--radius);
      border: var(--border);
      box-shadow: var(--shadow);
    }

    .editor {
      display: flex;
      flex-direction: column;
      height: 100%;
      padding: 16px;
      gap: 12px;
    }

    .editor-header {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .title-input {
      flex: 1;
      padding: 12px 14px;
      border-radius: 10px;
      border: var(--border);
      background: #fff;
      box-shadow: var(--shadow-soft);
      outline: none;
      font-size: 1.05rem;
    }
    .title-input:focus {
      box-shadow: var(--shadow), var(--ring);
    }

    .editor-actions {
      display: flex;
      gap: 8px;
    }

    .btn {
      appearance: none;
      border: none;
      border-radius: 10px;
      padding: 10px 14px;
      cursor: pointer;
      font-weight: 600;
      transition: transform .05s ease, box-shadow .2s ease, background .2s ease;
      box-shadow: var(--shadow-soft);
      border: var(--border);
      background: #fff;
      color: var(--color-text);
    }
    .btn:hover { transform: translateY(-1px); box-shadow: var(--shadow); }
    .btn:focus-visible { box-shadow: var(--shadow), var(--ring); outline: none; }
    .btn.primary { background: #1d4ed8; color: #fff; border-color: rgba(29,78,216,0.4); }
    .btn.primary:hover { background: #2563eb; }
    .btn.danger { background: #fff; color: #b91c1c; border-color: rgba(185,28,28,0.35); }
    .btn.danger:hover { background: #fee2e2; }

    .editor-body {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      height: calc(100% - 56px);
    }

    .content-input {
      width: 100%;
      height: 100%;
      padding: 12px;
      border-radius: 12px;
      border: var(--border);
      resize: none;
      outline: none;
      box-shadow: var(--shadow-soft);
      font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, 'Liberation Mono', 'Courier New', monospace;
    }
    .content-input:focus { box-shadow: var(--shadow), var(--ring); }

    .preview {
      display: flex;
      flex-direction: column;
      background: var(--color-surface);
      border-radius: 12px;
      border: var(--border);
      box-shadow: var(--shadow-soft);
      overflow: auto;
    }

    .preview-title {
      margin: 0;
      padding: 10px 12px;
      border-bottom: var(--border);
      font-size: 0.9rem;
      color: var(--color-muted);
    }

    .preview-pane {
      padding: 12px 14px;
      line-height: 1.6;
    }
    .preview-pane h1, .preview-pane h2, .preview-pane h3 { margin: 0.6em 0 0.4em; }
    .preview-pane pre, .preview-pane code {
      background: #f3f4f6;
      border-radius: 6px;
      padding: 2px 6px;
    }
    .preview-pane pre { padding: 10px; overflow: auto; }

    .toast {
      position: fixed;
      bottom: 18px;
      right: 18px;
      background: #111827;
      color: #fff;
      padding: 10px 14px;
      border-radius: 10px;
      box-shadow: var(--shadow);
      opacity: 0;
      transform: translateY(8px);
      pointer-events: none;
      transition: opacity .2s ease, transform .2s ease;
    }
    .toast.show {
      opacity: 1;
      transform: translateY(0);
    }

    .sr-only {
      position: absolute !important;
      width: 1px; height: 1px;
      padding: 0; margin: -1px;
      overflow: hidden; clip: rect(0,0,0,0);
      white-space: nowrap; border: 0;
    }

    @media (max-width: 960px) {
      main.app { grid-template-columns: 1fr; }
      .sidebar { height: 40vh; }
      .content { height: 60vh; }
      .editor-body { grid-template-columns: 1fr; height: auto; }
      .content-input { min-height: 220px; }
    }
  </style>
</Layout>
